<div class="container d-flex flex-column">

    <div class="mt-3 d-flex justify-content-between">
        <strong>online users: <span><%= onlineUsersCount %></span></strong>
        <a class="btn btn-primary" href="/users/create">add new user</a>
    </div>

    <table class="table table-hover text-center mt-1">
        <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">phone</th>
            <th scope="col">status</th>
            <th scope="col" colspan="2">controllers</th>
        </tr>
        </thead>
        <tbody>
        <%if(users.length == 0){%>
            <tr>
                <td colspan="6"><strong>no users right now</strong></td>
            </tr>
        <%}else{%>
        <%users.forEach(function(user){%>
            <%let data = user.data()%>
            <tr>
                <th><%= users.indexOf(user) + 1 %></th>
                <td><%= data.name %></td>
                <td><%= data.email || 'unknown' %></td>
                <td><%= data.phone || 'unknown' %></td>
                <td><%= data.status || 'unknown' %></td>
                <td><a href="/users/<%= data.uid %>/notification" class="btn btn-primary">notification</a></td>
                <td><a href="/users/<%= data.uid %>/delete" class="btn btn-danger">delete</a></td>
            </tr>
        <%})%>
        <%}%>
        </tbody>
    </table>
</div>
